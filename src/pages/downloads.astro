---
import Downloadcard from '@/components/Downloadcard.astro';
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Downloads | Windows Update Reset Tool">
  <main class="mx-auto my-0 max-w-screen-xl p-6 pt-16">
    <div class="mt-6">
      <h1 class="text-4xl font-bold text-indigo-main">Downloads</h1>
      <p class="my-4 text-gray-main">
        Reset Windows Update Tool is only available for download as 64-bit
        packages, as well as a source code file if you want to compile it
        yourself.
      </p>
    </div>

    <div class="mt-6">
      <h2 class="mb-4 text-3xl font-bold text-blue-main">
        Recommended Download
      </h2>
    </div>

    <Downloadcard
      bgActive="bg-gray-extralight"
      title="Reset Windows Update Tool - Portable"
      description="Windows Update Troubleshooting Tool"
      primaryLink="https://github.com/ManuelGil/Reset-Windows-Update-Tool/releases/download/v11.1.0/Portable.zip"
      secondaryLink="https://github.com/ManuelGil/Reset-Windows-Update-Tool/releases"
      version="v11.1.0"
    />

    <div class="mt-6">
      <h2 class="text-3xl font-bold text-blue-main">Other Downloads</h2>
    </div>

    <Downloadcard
      title="Reset Windows Update Tool - Script"
      description="This is a script for Windows troubleshooting"
      primaryLink="https://github.com/wureset-tools/script-wureset/archive/refs/tags/v10.5.5.zip"
      secondaryLink="https://github.com/wureset-tools/script-wureset/releases"
      version="v10.5.5"
      bgActive="bg-opacity-0"
    />

    <Downloadcard
      title="Reset Windows Update Tool - Lite"
      description="This script only restores the Windows Update components (lite version)"
      primaryLink="https://github.com/wureset-tools/script-wureset-lite/archive/refs/tags/v1.0.0.zip"
      secondaryLink="https://github.com/wureset-tools/script-wureset-lite/releases"
      version="v1.0.0"
      bgActive="bg-opacity-0"
    />

    <Downloadcard
      title="Reset WSUS Client ID"
      description="This script fixes duplicate WSUS Client IDs"
      primaryLink="https://github.com/wureset-tools/reset-wsus-client-id/archive/refs/tags/v1.0.2.zip"
      secondaryLink="https://github.com/wureset-tools/reset-wsus-client-id/releases"
      version="v1.0.2"
      bgActive="bg-opacity-0"
    />
  </main>
</Layout>
